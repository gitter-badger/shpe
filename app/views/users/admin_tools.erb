<% provide(:title, 'Tools') %>

<div class="container">
  <div class="row">
    <div class="span6">

      <h1>
        <%= @user.name %>

      </h1>


      <% if @user.admin? %>
          <%= link_to 'Admin Panel', admin_root_path, :class => 'btn btn-primary' %>

          <%= link_to 'Take Event Attendence', event_choices_path, class: 'btn' %>
          <%= link_to 'All Events', events_path, class: 'btn' %>
          <%= link_to "View Resumes", group_index_path('students'), class: 'btn' %>


      <% end %>


      <% if @user.admin? or @user.eboard? %>


          </div>

          <div class="span6">
            <h1>Your Announcements</h1>
            <%= link_to 'All Announcements', announcements_path, class: 'btn' %>
            <%= link_to 'Add Announcement', new_announcement_path, class: 'btn btn-success' %>

            <% if @announcements.nil? || @announcements.empty? %>
                <div class="well">
                  <h4>You have no announcements</h4>
                </div>
            <% else %>
                <% for announcement in @announcements %>
                    <div class="well">
                      <h4><%= link_to announcement.title, announcement %></h4>
                      <h5>By <%= @user.name %></h5>

                      <p><%= truncate(announcement.content.html_safe, :length => 30, :omission => '... (continued)') %></p>


                      <td><%= link_to 'Remove', announcement, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn btn-danger' %></td>
                    </div>
                <% end %>
            <% end %>
          </div>
          </div>


      <% end %>


      </div>