<% provide(:title, "Edit user") %>

<div class="container">


  <div class="row center">

    <h1>Update your profile</h1>

    <div class="span6 ">
      <%= form_for(@user) do |f| %>


          <% if current_user.company? %>
              <%= render 'company_fields', f: f %>


          <% else %>
              <%= render 'fields', f: f %>


          <% end %>
          <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
      <% end %>

    </div>
  </div>

</div>