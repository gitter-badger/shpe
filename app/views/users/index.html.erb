<% provide(:title, 'All users') %>

<div class="container">
  <div class="span6 center">
    <h2>All users</h2>

    <% for user in @users %>
        <li>
          <%= gravatar_for user, size: 52 %>
          <%= link_to user.name, {:controller => "users", :action => "view_user", :id => user} %>

        </li>
        <hr>


    <% end %>

  </div>
</div>