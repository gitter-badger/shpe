<% provide(:title, 'Sign up') %>

<div class="container">
  <div class="row">
    <div class="span9 center">
      <h1>Sign up</h1>
      <%= form_for(@user) do |f| %>
        <%= render 'fields', f: f %>
      
        <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
