<%= form_for(@event) do |f| %>
    <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
            <% @event.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <br/>

      <%= f.text_field :name, value: @name if @name %>
      <%= f.text_field :name unless @name %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <br/>
      <%= f.text_area :description, value: @description if @description %>
      <%= f.text_area :description unless @description %>
    </div>
    <div class="field">
      <%= f.label :location %>
      <br/>
      <%= f.text_field :location, value: @location  if @location %>
      <%= f.text_field :location unless @location %>
    </div>
    <div class="field">
      <%= f.label :start_time %>
      <br/>
      <%= f.datetime_select :start_time, value: @start_time if @start_time %>
      <%= f.datetime_select :start_time unless @start_time %>

    </div>
    <div class="field">
      <%= f.label :end_time %>
      <br/>
      <%= f.datetime_select :end_time, value: @end_time if @end_time %>
      <%= f.datetime_select :end_time unless @end_time %>
    </div>

    <div class="field">
      <%= f.label :value %>
      <br/>
      <%= f.text_field :value %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
