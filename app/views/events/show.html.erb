<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <b>Name:</b>
    <%= @event.name %>
  </p>

  <p>
    <b>Description:</b>
    <%= @event.description %>
  </p>

  <p>
    <b>Location:</b>
    <%= @event.location %>
  </p>

  <p>
    <b>Start time:</b>
    <%= @event.start_time %>
  </p>

  <p>
    <b>End time:</b>
    <%= @event.end_time %>
  </p>

  <p>
    <b>Value:</b>
    <%= @event.value %>
  </p>


  <%= link_to 'Edit', edit_event_path(@event), class: 'btn' if eboard_user? %>
  <%= link_to 'Back', events_path, class: 'btn' %>
</div>