<div class="container">

<h1>Listing announcements</h1>

<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @announcements.each do |announcement| %>
  <tr>
    <td><%= announcement.user_id %></td>
    <td><%= announcement.title %></td>
    <td><%= truncate(announcement.content.html_safe, :length => 30, :omission => '... (continued)')  %></td>
    <td><%= link_to 'Show', announcement , class: 'btn' %></td>
    <td><%= link_to 'Edit', edit_announcement_path(announcement) , class: 'btn' %></td>
    <td><%= link_to 'Destroy', announcement, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Announcement', new_announcement_path, class: 'btn btn-primary' %>
</div>